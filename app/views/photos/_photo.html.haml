.column.grid_1
  .thumbnail{:id => "photo-#{photo.id}"}
    - if photo.image?
      = link_to image_tag(photo.image_url(:thumb)), photo.image.url, :target => '_blank'
      - if @dive
        %br
        = link_to "Delete", dive_photo_path(@dive, photo), :method => :delete, :confirm => "Are you sure you want to delete this photo?", :remote => :true, :class => 'delete-photo-link'

